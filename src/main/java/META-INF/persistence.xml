<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">
   <persistence-unit name="com.scholanova.groupe2.libraryproject" transaction-type="RESOURCE_LOCAL">
   	  <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider> 
      <class>com.scholanova.groupe2.libraryproject.entities.Address</class>
      <class>com.scholanova.groupe2.libraryproject.entities.BankAccount</class>
      <class>com.scholanova.groupe2.libraryproject.entities.Basket</class>
      <class>com.scholanova.groupe2.libraryproject.entities.Book</class>
      <class>com.scholanova.groupe2.libraryproject.entities.Lending</class>
      <class>com.scholanova.groupe2.libraryproject.entities.Order</class>
      <class>com.scholanova.groupe2.libraryproject.entities.Price</class>
      <class>com.scholanova.groupe2.libraryproject.entities.Stock</class>
      <class>com.scholanova.groupe2.libraryproject.entities.User</class>
      <properties>
         <property name="hibernate.ejb.cfgfile" value="hibernate.cfg.xml"/>
      </properties>
   </persistence-unit>
</persistence>